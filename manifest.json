{
	"browser_specific_settings": {
		"gecko": {
			"id": "widescreen-browsing@example.com",
			"strict_min_version": "42.0"
		}
	},
    "manifest_version": 2,
    "name": "Widescreen Browsing",
    "version": "0.1",
	"content_scripts":[
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"browser_action": {
	    "default_icon": "icon.png",
	    "default_popup": "popup.html"
	},
	"permissions": [
	  "tabs",
	  "storage"
	]

}